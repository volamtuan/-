#!/bin/bash
set -e

# Hàm để lấy địa chỉ IPv6 từ giao diện mạng
get_ipv6() {
    ipv6=$(ip -6 addr show eth0 | grep -oP '(?<=inet6\s)[\da-fA-F:]+(?=/64)' | head -n 1)
    echo "$ipv6"
}

# Hàm để tạo địa chỉ IPv6 và lưu vào tệp
gen_ipv6_addresses() {
    ipv6=$(get_ipv6)
    echo "Generating IPv6 addresses based on: $ipv6"
    
    : > /home/ipv6.txt  # Xóa nội dung cũ của tệp ipv6.txt

    for ((count_ipv6=1; count_ipv6<=2000; count_ipv6++)); do
        echo "${ipv6}:$((RANDOM%10000)):$((RANDOM%10000)):$((RANDOM%10000)):$((RANDOM%10000))" >> /home/ipv6.txt
    done
}

# Hàm để tạo cấu hình cho 3proxy
gen_3proxy_cfg() {
    cat <<EOF > /usr/local/etc/3proxy/3proxy.cfg
daemon
maxconn 10000
nserver 1.1.1.1
nserver 8.8.4.4
nserver 2001:4860:4860::8888
nserver 2001:4860:4860::8844
nscache 65536
timeouts 1 5 30 60 180 1800 15 60
setgid 65535
setuid 65535
stacksize 6291456
flush
allow 14.224.163.75
allow 127.0.0.1

$(awk -F "/" '{print "allow *" $1 "\n" \
"proxy -6 -n -a -p" $4 " -i" $3 " -e"$5"\n" \
"flush\n"}' ${WORKDATA})
EOF
}

# Tạo và thêm cấu hình proxy sử dụng các địa chỉ IPv6 đã tạo
gen_proxy_file_for_user() {
    awk -F "/" '{print $3 ":" $4 }' ${WORKDATA} > /home/proxy.txt
}

# Hàm tạo dữ liệu cho các proxy
gen_data() {
    seq $FIRST_PORT $LAST_PORT | while read port; do
        entry="//$IP4/$port/$(gen64 $IP6)"
        echo "$entry"
        echo "$IP4:$port" >> "$WORKDIR/ipv4.txt"
        echo "$(gen64 $IP6)" >> "$WORKDIR/ipv6.txt"
    done > $WORKDATA
}

# Hàm tạo cấu hình iptables
gen_iptables() {
    awk -F "/" '{print "iptables -I INPUT -p tcp --dport " $4 " -m state --state NEW -j ACCEPT"}' ${WORKDATA} > $WORKDIR/boot_iptables.sh >/dev/null 2>&1
}

# Hàm tạo cấu hình ifconfig
gen_ifconfig() {
    awk -F "/" '{print "ifconfig eth0 inet6 add " $5 "/64"}' ${WORKDATA} > $WORKDIR/boot_ifconfig.sh
}

# Hàm xoay địa chỉ IPv6
rotate_ipv6() {
    echo "Rotating IPv6 addresses..."
    IP6=$(ip -6 addr show | grep inet6 | grep -v 'scope link' | awk '{print $2}' | cut -d'/' -f1 | sed -n '2p' | cut -d':' -f1-4)
    gen_data >$WORKDIR/data.txt
    gen_ifconfig >$WORKDIR/boot_ifconfig.sh
    bash $WORKDIR/boot_ifconfig.sh
    echo "IPv6 addresses rotated successfully."
    echo "Restarting 3proxy service..."
    systemctl restart 3proxy
    restart_result=$?

    if [ $restart_result -eq 0 ]; then
        echo "IPv6 addresses rotated successfully."
        echo "[OK]: Thành công"
    else
        echo "Failed to rotate IPv6 addresses!"
        echo "[ERROR]: Thất bại!"
        exit 1
    fi
}

# Cài đặt các gói cần thiết
echo "Installing necessary packages..."
yum -y install make wget curl jq git iptables-services >/dev/null 2>&1

# Cài đặt 3proxy
install_3proxy() {
    echo "Installing 3proxy..."
    URL="https://file.lowendviet.com/Scripts/Linux/CentOS7/3proxy/3proxy-0.9.4.x86_64.rpm"
    rpm -i 3proxy-0.9.4.x86_64.rpm
    make -f Makefile.Linux >/dev/null 2>&1
    mkdir -p /usr/local/etc/3proxy/{bin,logs,stat} >/dev/null 2>&1
    cp src/3proxy /usr/local/etc/3proxy/bin/ >/dev/null 2>&1
    cd $WORKDIR
}

install_3proxy

# Set working directory
WORKDIR="/home/proxy"
WORKDATA="${WORKDIR}/data.txt"
mkdir $WORKDIR && cd $_

# Get IP addresses
IP4=$(ip -4 addr show eth0 | grep -oP '(?<=inet\s)\d+(\.\d+){3}' | grep -E '^192\.168\.' | head -n 1)
IP6=$(ip -6 addr show | grep inet6 | grep -v 'scope link' | awk '{print $2}' | cut -d'/' -f1 | sed -n '2p' | cut -d':' -f1-4)

echo "IPv4 = ${IP4}"
echo "IPv6 = ${IP6}"

FIRST_PORT=10000
LAST_PORT=22222

echo "Proxy ports range: $FIRST_PORT - $LAST_PORT"
echo "Number of proxies to create: $(($LAST_PORT - $FIRST_PORT + 1))"

gen_data >$WORKDIR/data.txt
gen_iptables > $WORKDIR/gen_iptables.sh
gen_ifconfig >$WORKDIR/boot_ifconfig.sh
chmod +x $WORKDIR/boot_*.sh /etc/rc.local

gen_3proxy >/usr/local/etc/3proxy/3proxy.cfg

# Configure systemd service for 3proxy
cat <<EOF >/etc/systemd/system/3proxy.service
[Unit]
Description=3proxy Proxy Server
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/etc/3proxy/bin/3proxy /usr/local/etc/3proxy/3proxy.cfg
ExecReload=/bin/kill -HUP \$MAINPID
ExecStop=/bin/kill -TERM \$MAINPID
Restart=always
RestartSec=5
LimitNOFILE=1000000

[Install]
WantedBy=multi-user.target
EOF

# Create rc.local service file if it doesn't exist
cat <<EOF >/etc/systemd/system/rc-local.service
[Unit]
Description=/etc/rc.local Compatibility
ConditionPathExists=/etc/rc.local

[Service]
Type=forking
ExecStart=/etc/rc.local start
TimeoutSec=0
StandardOutput=tty
RemainAfterExit=yes
SysVStartPriority=99

[Install]
WantedBy=multi-user.target
EOF

chmod +x /etc/rc.local

systemctl enable rc-local
systemctl enable 3proxy

systemctl start rc-local
systemctl start 3proxy

# Generate proxy file for users
gen_proxy_file_for_user
rm -rf /root/3proxy-3proxy-0.8.6

echo "Starting Proxy..."

echo "Total current IPv6:"
ip -6 addr | grep inet6 | wc -l
